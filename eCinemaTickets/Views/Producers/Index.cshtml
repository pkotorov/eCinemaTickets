@model IEnumerable<Producer>

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>Profile Picture</th>
                    <th>Full Name</th>
                    <th>Biography</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var producer in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@producer.ProfilePictureUrl" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @producer.FullName
                        </td>
                        <td class="align-middle">
                            @producer.Bio
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-primary text-white"><i class="bi bi-pencil-square"></i>Edit</a> |
                            <a class="btn btn-info text-white"><i class="bi bi-eye"></i>Details</a> |
                            <a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>