@model IEnumerable<Cinema>

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>Cinema Logo</th>
                    <th>Cinema Name</th>
                    <th>Cinema Description</th>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <th>Actions</th>

                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var cinema in Model)
                {
                <tr>
                    <td class="align-middle">
                        <img class="rounded-circle" src="@cinema.Logo" style="max-width: 150px" />
                    </td>
                    <td class="align-middle">
                        @cinema.Name
                    </td>
                    <td class="align-middle">
                        @cinema.Description
                    </td>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <td class="align-middle">
                            <a class="btn btn-primary text-white" asp-action="Edit" asp-route-id="@cinema.Id"><i class="bi bi-pencil-square"></i>Edit</a> |
                            <a class="btn btn-info text-white" asp-action="Details" asp-route-id="@cinema.Id"><i class="bi bi-eye"></i>Details</a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@cinema.Id"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    }
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@await Html.PartialAsync("_CreateItem", "Cinemas"); 